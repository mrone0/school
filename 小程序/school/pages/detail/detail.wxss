/* pages/post/post-detail/post-detail.wxss */

.container{
  display: flex;
  flex-direction: column;
  padding: 0;
}
.head-image{
  width: 750rpx;
  height: 460rpx;

}
.title{
  font-size: 20px;
  margin: 30rpx;
  letter-spacing: 2px;
  color:#4b556c;
}
.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between; 
  font-size: 13px;
  width: 100%;
}
.author-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}
.avatar{
  height: 50rpx;
  width: 50rpx;
}
.author{
  font-weight: 400;
  margin:0 20rpx;
  color:#666;
  font-size: 14px;
}
.date{
  color:#919191;
  margin-right: 30rpx;
}
.detail{
  word-wrap: break-word;
  word-break: normal;
  color:#666;
  margin:40rpx 30rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size: 14px;
}

.tool{
  height: 64rpx;
  text-align: left;
  line-height: 64rpx;
  margin: 30rpx;

}
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
}
.tool-item image{
  height: 30rpx;
  width: 30rpx;
   vertical-align: -3px; 
  margin-right: 10rpx;
}
.comment image{
  transform: scale(.85);
}